<h2 style="text-align :center"><%= @location.name%></h2>

<div id="alinhamento" class="container">
  <div class="row">
    <div class="col-sm-6" style="margin-right: 42px">

        <% @albums.each do |album| %>
          <ul style="list-style: none;" >
            <% album.photos.each do  |photo|  %>
              <li >
                <div class="cards">
                  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(photo.key)%>)">
                      <ul class="d-flex list-unstyled mt-auto pl-1 pr-1 justify-content-between">
                        <li class="d-flex align-items-start me-3">
                          <small style="font-size: 56%; text-shadow: 1px 1px 2px black;"><%= @location.address %> </small>
                        </li>
                        <li class="d-flex align-items-center me-3">
                          <svg class="bi me-2" width="1em" height="1em"><use xlink:href="#calendar3"/></svg>
                          <small style="font-size: 56%; text-shadow: 1px 1px 2px black;"> <%= album.date %>  </small>
                      </ul>

                  </div>
                </div>
              </li>
            <% end %>
          </ul>
        <% end %>

    </div>
  </div>
</div>



<div class="comment ml-2">
  <% @comments.each do  |comment|  %>
  <div class="card-product">
    <div class="card-product-infos" style="border: 1px solid white; margin-right: 50px; margin-top: 30px; margin-left: 20px;">
      <h2><%= comment.text %></h2>
      <p><%= @location.address %></p>
       <%= @albums.last.date %>
    </div>
  </div>
  <% end %>
</div>
